<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="idig.za.net.conscalc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.READ_LOGS"/>
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="idig.za.net.conscalc.GetRegistration"
            android:label="@string/get_registration">
         </activity>
        <activity android:name="idig.za.net.conscalc.SplashScreen" 
                     android:label="@string/splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="idig.za.net.conscalc.CalcMenu" >
        </activity>
        <activity android:name="idig.za.net.conscalc.SearchRecord" >
        </activity>
        <activity android:name="idig.za.net.conscalc.AddRecord" >
        </activity>
        <activity
            android:name="idig.za.net.conscalc.CalculateConsumption"
            android:label="@string/calculate_consumption" >
        </activity>
        <activity
            android:name="idig.za.net.conscalc.DeleteRecord"
            android:label="@string/delete_record" >
        </activity>
        <activity
            android:name="idig.za.net.conscalc.EditRecord"
            android:label="@string/edit_record" >
        </activity>
    </application>

</manifest>